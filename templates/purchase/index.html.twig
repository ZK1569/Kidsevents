{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/lumen/bootstrap.min.css">
{% endblock %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}

    <div class="container pt-5">
    
        <h1>Mes commandes</h1>

        {% for rubrique, messages in app.flashes %}
            <div class="alert alert-{{rubrique}}">
                {% for message in messages %}
                    <span>{{message}}</span>
                {% endfor %}
            </div>
        {% endfor %}

        {% if purchases | length <= 0 %}
            <h3>Pas de commande </h3>
        {% else %}
            

        <h3>Les commandes à venir après le {{"now"|date("d/m/Y")}}</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Adress</th>
                    <th>Date de commande</th>
                    <th>Date de l'anniversaire</th>
                    <th>Supplements</th>
                    <th>Total</th>
                </tr>
            </thead>    
            <tbody>
                {% for p in purchases %}
                    {% if "now"|date() <= p.reserveFor|date()%}
                        <tr>
                            <td>{{p.id}}</td>
                            <td>{{p.address}} <br>{{p.postalCode}}, {{p.city}}</td>
                            <td>{{p.purchasedAt | date('d/m/Y')}}</td>
                            <td>{{p.reserveFor | date('d/m/Y')}}</td>
                            <td>
                                <ul>
                                    {% for item in p.purchaseItems %}
                                        <li>{{item.quantity}}x {{item.supplementName}} ({{item.Total}} €)</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>{{p.total}} €</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>

        <h3>Les commandes passée </h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Adress</th>
                    <th>Date de commande</th>
                    <th>Date de l'anniversaire</th>
                    <th>Themes</th>
                    <th>Total</th>
                </tr>
            </thead>    
            <tbody>
                {% for p in purchases %}
                {% if "now"|date() >= p.reserveFor|date()%}
                    <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.address}} <br>{{p.postalCode}}, {{p.city}}</td>
                        <td>{{p.purchasedAt | date('d/m/Y')}}</td>
                        <td>{{p.reserveFor | date('d/m/Y')}}</td>
                        <td>
                            <ul>
                                {% for item in p.purchaseItems %}
                                    <li>{{item.supplementName}} {{item.Total}} €</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{p.total}} €</td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>

{% endblock %}